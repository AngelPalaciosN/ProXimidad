# ============================================
# Archivo de Ejemplo de Variables de Entorno
# ============================================
# 
# INSTRUCCIONES:
# 1. Copia este archivo como .env.production
# 2. Reemplaza los valores con tus configuraciones reales
# 3. NO subas el archivo .env.production a Git
# 4. Coloca este archivo en: /home/proximidad/backend/.env

# ============================================
# CONFIGURACIÓN GENERAL
# ============================================

# Modo de ejecución (development, production)
DJANGO_ENV=production

# Secret key de Django (CAMBIAR POR UNA ÚNICA)
# Generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=tu-secret-key-super-secreta-y-unica-aqui

# Debug (SIEMPRE False en producción)
DEBUG=False

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=proximidad.serveirc.com,192.168.1.50,181.135.64.177,localhost,127.0.0.1

# ============================================
# BASE DE DATOS
# ============================================

DB_ENGINE=django.db.backends.mysql
DB_NAME=proximidad_db
DB_USER=proximidad_user
DB_PASSWORD=tu_password_de_base_de_datos
DB_HOST=localhost
DB_PORT=3306

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Gmail SMTP Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=proximidadapp@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password_de_gmail

# Dirección de email por defecto
DEFAULT_FROM_EMAIL=proximidadapp@gmail.com
SERVER_EMAIL=proximidadapp@gmail.com

# ============================================
# ARCHIVOS MEDIA Y ESTÁTICOS
# ============================================

MEDIA_ROOT=/home/proximidad/backend/media
MEDIA_URL=/media/

STATIC_ROOT=/home/proximidad/backend/staticfiles
STATIC_URL=/static/

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# CORS (si necesitas permitir orígenes específicos)
CORS_ALLOWED_ORIGINS=http://proximidad.serveirc.com,http://192.168.1.50,http://181.135.64.177

# CSRF
CSRF_TRUSTED_ORIGINS=http://proximidad.serveirc.com,http://192.168.1.50,http://181.135.64.177

# Session cookie
SESSION_COOKIE_SECURE=False  # True si usas HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF cookie
CSRF_COOKIE_SECURE=False  # True si usas HTTPS
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# ============================================
# CONFIGURACIÓN DE LOGS
# ============================================

LOG_LEVEL=INFO
LOG_DIR=/home/proximidad/logs

# ============================================
# TIMEZONE Y LOCALIZACIÓN
# ============================================

TIME_ZONE=America/Bogota
LANGUAGE_CODE=es-co
USE_TZ=True
USE_I18N=True
USE_L10N=True

# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================

# URLs de la aplicación
SITE_URL=http://proximidad.serveirc.com
API_BASE_URL=http://proximidad.serveirc.com/api

# Límites de archivos (en bytes)
MAX_UPLOAD_SIZE=10485760  # 10 MB

# ============================================
# CONFIGURACIÓN DE GUNICORN
# ============================================

GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=60
GUNICORN_BIND_APP1=127.0.0.1:8000
GUNICORN_BIND_APP2=127.0.0.1:8001

# ============================================
# NOTAS IMPORTANTES
# ============================================
#
# 1. SECRET_KEY: DEBE ser única para tu instalación
#    Genera una nueva con:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# 2. DB_PASSWORD: Usa la contraseña que configuraste en MariaDB
#    Para cambiarla:
#    mysql -u root -p
#    ALTER USER 'proximidad_user'@'localhost' IDENTIFIED BY 'nueva_password';
#
# 3. EMAIL_HOST_PASSWORD: Necesitas crear un "App Password" en Gmail
#    Ve a: https://myaccount.google.com/apppasswords
#    Genera una contraseña de aplicación para "Mail"
#
# 4. Si vas a usar HTTPS (recomendado):
#    - Cambia SESSION_COOKIE_SECURE=True
#    - Cambia CSRF_COOKIE_SECURE=True
#    - Actualiza SITE_URL y API_BASE_URL con https://
#    - Agrega certificado SSL en Nginx
#
# 5. CORS_ALLOWED_ORIGINS: Agrega aquí los orígenes permitidos
#    para hacer peticiones cross-origin
#
# ============================================
