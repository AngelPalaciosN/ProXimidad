# ======================================
# CONFIGURACIÓN GLOBAL DEL PROYECTO
# ======================================

# Información del Proyecto
PROJECT_NAME=ProXimidad
PROJECT_VERSION=2.0.0
PROJECT_DESCRIPTION=Plataforma de servicios de proximidad

# ======================================
# CONFIGURACIÓN DEL BACKEND (Django)
# ======================================

# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.100,192.168.1.106

# Database Configuration
DB_NAME=proxima
DB_USER=root
DB_PASSWORD=root
DB_HOST=localhost
DB_PORT=3306

# Backend Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ========================================
# CONFIGURACIÓN COMPLETA DE CORS
# ========================================
# Orígenes permitidos (separados por coma)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.1.101:3000

# Permitir TODOS los orígenes (¡SOLO para desarrollo!)
CORS_ALLOW_ALL_ORIGINS=False

# Permitir credenciales (cookies, headers de auth)
CORS_ALLOW_CREDENTIALS=True

# Métodos HTTP permitidos (separados por coma)
CORS_ALLOWED_METHODS=DELETE,GET,OPTIONS,PATCH,POST,PUT

# Headers permitidos (separados por coma)
CORS_ALLOWED_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with

# Headers expuestos al frontend (separados por coma)
CORS_EXPOSE_HEADERS=

# Tiempo de cache para preflight requests (en segundos)
CORS_PREFLIGHT_MAX_AGE=86400

# Regex para URLs que permiten CORS
CORS_URLS_REGEX=^/api/.*$

# Media Files Configuration
MEDIA_URL=/media/
MEDIA_ROOT=media/
FILE_UPLOAD_MAX_SIZE=5242880

# Static Files Configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Internationalization
LANGUAGE_CODE=es-es
TIME_ZONE=America/Costa_Rica
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Cache Configuration
CACHE_TIMEOUT=300
CACHE_MAX_ENTRIES=1000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_TO_FILE=True

# Production Settings
PRODUCTION=False
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# ======================================
# CONFIGURACIÓN DEL FRONTEND (React/Vite)
# ======================================

# Frontend Configuration - Vite/React
VITE_API_BASE_URL=http://localhost:8000/api
VITE_BACKEND_URL=http://localhost:8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5173

# App Configuration
VITE_APP_TITLE=ProXimidad
VITE_APP_DESCRIPTION=Encuentra servicios cerca de ti

# Location Configuration
VITE_DEFAULT_LOCATION=Bogotá, Colombia
VITE_MAP_DEFAULT_ZOOM=12

# UI Configuration
VITE_PAGINATION_SIZE=10
VITE_SEARCH_DEBOUNCE_MS=300

# File Configuration
VITE_IMAGE_MAX_SIZE=5242880
VITE_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/webp
