# Variables Globales del Proyecto ProXimidad
PROJECT_NAME=ProXimidad
PROJECT_VERSION=2.0.0
PROJECT_DESCRIPTION=Plataforma de servicios de proximidad

# Configuración de Desarrollo
ENVIRONMENT=development
DEBUG_MODE=true

# URLs de Desarrollo
FRONTEND_URL=http://192.168.1.101:3000
BACKEND_URL=http://192.168.1.101:8000
API_URL=http://192.168.1.101:8000/api

# Configuración de Red
SERVER_HOST=192.168.1.101
FRONTEND_PORT=3000
BACKEND_PORT=8000

# Configuración de Base de Datos
DATABASE_USER=root
DATABASE_PASSWORD=root
DATABASE_HOST=localhost
DATABASE_PORT=3306

# ========================================
# CONFIGURACIÓN COMPLETA DE CORS
# ========================================
# URLs de origen permitidas para requests cross-origin (incluye puertos 3000 y 5173)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.1.101:3000,http://localhost:5173,http://127.0.0.1:5173,http://192.168.1.101:5173
# Permitir TODOS los orígenes durante desarrollo (simplifica testing)
CORS_ALLOW_ALL_ORIGINS=True
# Permitir envío de credenciales
CORS_ALLOW_CREDENTIALS=True