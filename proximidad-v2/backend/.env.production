# Configuración de producción para ProXimidad Backend
# Copia este archivo como .env en tu Raspberry Pi

# Django Settings
SECRET_KEY=cambia-esto-por-una-clave-secreta-muy-segura-y-larga
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.50,181.135.64.177,proximidad.serveirc.com

# Database (MySQL/MariaDB)
DATABASE_ENGINE=django.db.backends.mysql
DATABASE_NAME=proxima
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_CHARSET=utf8mb4
DATABASE_INIT_COMMAND=SET sql_mode='STRICT_TRANS_TABLES'

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
JWT_SECRET_KEY=otra-clave-secreta-para-jwt

# CORS Settings (ajusta según tu frontend)
CORS_ALLOWED_ORIGINS=http://192.168.1.100,http://proximidad.local,https://tudominio.com
CORS_EXPOSE_HEADERS=
CORS_PREFLIGHT_MAX_AGE=86400
CORS_URLS_REGEX=^/api/.*$

# Static & Media
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# Logging
LOG_LEVEL=WARNING
LOG_TO_FILE=True

# Cache
CACHE_TIMEOUT=600
CACHE_MAX_ENTRIES=2000

# File Upload
FILE_UPLOAD_MAX_SIZE=10485760

# Security Settings (importante para producción)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Language & Timezone
LANGUAGE_CODE=es-es
TIME_ZONE=America/Costa_Rica
USE_I18N=True
USE_TZ=True
